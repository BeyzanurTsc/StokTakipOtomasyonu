@{
    ViewData["Title"] = "HareketTblList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    table {
        margin-top: 10px;
    }

    .form-item{
        margin-top:15px;
    }

    #div_selectUrun{
        margin-top:30px;
    }
</style>
<h1>Hareketler</h1>
<button class="btn btn-primary" id="addBtn">Ekle</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Personel <a href="/Home/PersonelList"><i class="fa-solid fa-table"></i></a></th>
            <th>HareketTarihi</th>
            <th>Urun Kodu</th>
            <th>Kart Tipi <a href="/Home/KartTipiList"><i class="fa-solid fa-table"></i></a></th>
            <th>Departman Adı <a href="/Home/DepartmanList"><i class="fa-solid fa-table"></i></a></th>
            <th>Miktar</th>
            <th>Birim <a href="/Home/BirimList"><i class="fa-solid fa-table"></i></a></th>
            <th>İşlemler</th>


        </tr>
    </thead>
    <tbody id="tableData"></tbody>
</table>

@*Ekle modal*@
<div class="modal fade modal" id="addMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Ekle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <div class="form-item">
                            <select id="add-urunId" class="form-control" required>
                                <option value="">Ürün seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="add-kartId" class="form-control" required>
                                <option value="">Kart tipi seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="add-departmanId" class="form-control" required>
                                <option value="">Departman seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="add-personelId" class="form-control" required>
                                <option value="">Personel seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <input type="text" class="form-control" id="add-miktar" placeholder="Miktar" required />
                        </div>
                        <div class="form-item">
                            <select id="add-birimId" class="form-control" required>
                                <option value="">Birim seçiniz</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="saveBtn" onclick="AddData();">Kaydet</button>
            </div>

        </div>

    </div>

</div>

@*Güncelle modal*@
<div class="modal fade modal" id="updateMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Güncelle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <div>
                            <label><b>Id</b></label>
                            <input type="text" class="form-control" id="upd-hareketId" disabled="disabled" />
                        </div>
                        <div>
                            <label><b>Hareket Tarihi</b></label>
                            <input type="text" class="form-control" id="upd-hareketTarihi" disabled="disabled" />
                        </div>

                        <div class="form-item" id="div_selectUrun">
                            <select id="upd-urunId" class="form-control" required>
                                <option value="">Ürün seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="upd-kartId" class="form-control" required>
                                <option value="">Kart tipi seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="upd-departmanId" class="form-control" required>
                                <option value="">Departman seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <select id="upd-personelId" class="form-control" required>
                                <option value="">Personel seçiniz</option>
                            </select>
                        </div>
                        <div class="form-item">
                            <input type="text" class="form-control" id="upd-miktar" placeholder="Miktar" required />
                        </div>
                        <div class="form-item">
                            <select id="upd-birimId" class="form-control" required>
                                <option value="">Birim seçiniz</option>
                            </select>
                        </div>


                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="updateSaveBtn" onclick="UpdateData()">Kaydet</button>
            </div>

        </div>

    </div>
</div>

