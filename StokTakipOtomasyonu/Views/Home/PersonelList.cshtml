
@{
    ViewData["Title"] = "PersonelList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Personel Listesi</h1>
<style>
    table {
        margin-top: 10px;
    }
</style>
<a href="/Home/HareketTblList" class="btn btn-warning"><i class="fa-regular fa-hand-point-left"></i></a>
<button class="btn btn-primary" id="addBtn">Ekle</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görev</th>
            <th>TC</th>
            <th>Gsm</th>
            <th>Email</th>
            <th>Şifre</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody id="tableData"></tbody>
</table>
@*Ekle modal*@
<div class="modal fade modal" id="AddPersonelMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Personel Ekle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">

                        <label>Ad</label>
                        <input type="text" class="form-control" id="add-personelAd" required />
                        <label>Soyad</label>
                        <input type="text" class="form-control" id="add-personelSoyad" required />
                        <label>Görev</label>
                        <input type="text" class="form-control" id="add-personelGorev" required />
                        <label>Tc</label>
                        <input type="text" class="form-control" id="add-personelTc" required />
                        <label>Gsm</label>
                        <input type="text" class="form-control" id="add-personelGsm" required />
                         <label>Email</label>
                        <input type="email" class="form-control" id="add-email" required />
                        <label>Şifre</label>
                        <input type="password" class="form-control" id="add-sifre" required />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" id="add-personelDes" required />

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="saveBtn" onclick="AddData();">Kaydet</button>
            </div>

        </div>

    </div>

</div>

@*Güncelle modal*@
<div class="modal fade modal" id="UpdatePersonelMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Güncelle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label>Id</label>
                        <input type="text" class="form-control" id="upd-personelId" disabled="disabled" />
                        <label>Ad</label>
                        <input type="text" class="form-control" id="upd-personelAd" required />
                        <label>Soyad</label>
                        <input type="text" class="form-control" id="upd-personelSoyad" required />
                        <label>Görev</label>
                        <input type="text" class="form-control" id="upd-personelGorev" required />
                        <label>Tc</label>
                        <input type="text" class="form-control" id="upd-personelTc" required />
                        <label>Gsm</label>
                        <input type="text" class="form-control" id="upd-personelGsm" required />
                        <label>Email</label>
                        <input type="email" class="form-control" id="upd-email" required />
                        <label>Şifre</label>
                        <input type="password" class="form-control" id="upd-sifre" required />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" id="upd-personelDes" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="updateSaveBtn" onclick="UpdateData()">Kaydet</button>
            </div>

        </div>

    </div>

</div>




