@{
    ViewData["Title"] = "Departman";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        margin-top: 10px;
    }
</style>
<h1>Departman Listesi</h1>
<a href="/Home/HareketTblList" class="btn btn-warning"><i class="fa-regular fa-hand-point-left"></i></a>
<button class="btn btn-primary" id="addBtn">Ekle</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Departman</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody id="tableData"></tbody>
</table>
@*Ekle modal*@
<div class="modal fade modal" id="departmanMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Departman Ekle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">

                        <label>Departman</label>
                        <input type="text" class="form-control" id="dName" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="saveBtn" onclick="AddData();">Kaydet</button>
            </div>

        </div>

    </div>

</div>

@*Güncelle modal*@
<div class="modal fade modal" id="UpdateDepartmanMdl">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Güncelle</h1>
                <button class="btn-close text-danger" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label>Departman Id</label>
                        <input type="text" class="form-control" id="d_Id" disabled="disabled" />
                        <label>Departman</label>
                        <input type="text" class="form-control" id="d_Name" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-primary" id="updateSaveBtn" onclick="UpdateData()">Kaydet</button>
            </div>

        </div>

    </div>

</div>




